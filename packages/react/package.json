{
  "name": "@anon-aadhaar/react",
  "version": "2.4.0",
  "description": "Frontend component kit for Anon Aadhaar protocol",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --dts",
    "dev": "tsup src/index.ts --dts --watch",
    "lint": "eslint --ext .js,.ts .",
    "format": "prettier --ignore-path .prettierignore --write \"**/*.+(js|ts|json)\"",
    "test": "NODE_OPTIONS=--max_old_space_size=8192 TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' npx ts-mocha -p tsconfig.json test/**/*.test.{ts,tsx} --exit",
    "prepare": "cd ../.. && husky install",
    "test-publish": "yarn build && yarn lint && yarn test && npm publish --dry-run",
    "publishtonpm": "yarn build && yarn lint && yarn npm publish",
    "bump-to": "yarn version -i "
  },
  "files": [
    "./src/*",
    "./dist/*",
    "README.md",
    "tsconfig.json",
    "package.json",
    "LICENSE"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@anon-aadhaar/core": "workspace:*",
    "@pcd/pcd-types": "^0.10.0",
    "@types/json-bigint": "^1.0.1",
    "@types/pako": "^2.0.0",
    "@types/qr-image": "^3.2.6",
    "@types/react-qr-reader": "^2.1.7",
    "@types/styled-components": "^5.1.26",
    "@types/uuid": "^9.0.2",
    "@types/valid-url": "^1.0.4",
    "@types/webfontloader": "^1.6.38",
    "buffer": "^6.0.3",
    "jsqr": "^1.4.0",
    "node-forge": "^1.3.1",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.2.0",
    "react-icons": "^5.0.1",
    "react-qr-reader": "^3.0.0-beta-1",
    "styled-components": "^6.0.5",
    "webfontloader": "^1.6.28"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/chai": "^4.3.5",
    "@types/jsdom": "^21.1.1",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.8",
    "@types/node-forge": "^1.3.8",
    "@types/react": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.2.1",
    "@typescript-eslint/parser": "^6.2.1",
    "chai": "^4.3.7",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.10.0",
    "eslint-plugin-react": "^7.33.1",
    "global-jsdom": "^9.1.0",
    "husky": "^8.0.3",
    "ignore-styles": "^5.0.1",
    "jsdom": "^22.1.0",
    "mocha": "^10.2.0",
    "prettier": "^3.0.1",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typescript": "^5.1.6"
  }
}
